          <div class="col-md-6">
            <img src="<%= product.image %>" alt="<%= product.name %>" class="img-fluid">
          </div>
          <!-- Product Details -->
          <div class="col-md-6">
            <h1 class="mb-3"><%= product.name %></h1>
            <h4>Reference: <%= product.reference %></h4>
            <h5>Brand: <%= brand ? brand.name : 'N/A' %></h5>
            <h5>Service: <%= service ? service.title : 'N/A' %></h5>
            <p class="mt-4"><%= product.description %></p>
    
            <!-- PDF Download Link (if applicable) -->
            <% if (product.pdf) { %>
              <a href="<%= product.pdf %>" class="btn btn-primary mt-3" download>Download PDF</a>
            <% } %>
            <a href="mailto:datasecurity@datasecurity.ma?subject=Product%20Inquiry%20-%20<%= encodeURIComponent(product.name) %>&body=Hello,%0D%0A%0D%0AI%20am%20interested%20in%20the%20product%20<%= encodeURIComponent(product.name) %>.%0D%0APlease%20provide%20more%20information.%0D%0A%0D%0AThank%20you." class="btn btn-secondary mt-3">Send Mail</a>
