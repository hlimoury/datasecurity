<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head") %>
</head>
<style>
    .form-update-brands{
    padding-left: 40%;
}
</style>
<body>
  <h1>Update Services</h1>
<div class="form-update-brands">
  <!-- List of Services -->
  <table>
    <tr>
      <th>Title</th>
      <th>Actions</th>
    </tr>
    <% services.forEach(service => { %>
      <tr>
        <td><%= service.title %></td>
        <td>
          <a href="/editservice/<%= service._id %>">Edit</a>
          <form action="/deleteservice/<%= service._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</div>
  <!-- Include necessary scripts -->
</body>
</html>
