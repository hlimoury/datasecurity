    </header>
    <!-- Navbar End -->
<!-- Search Form -->
<form action="" method="GET" class="mb-4">
    <div class="input-group">
      <input type="text" name="search" class="form-control" placeholder="Search products..." value="<%= query.search || '' %>">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>
  

    <div class="container py-5">
        <h1>Produits Pour <%= service.title %></h1>
        <p><%= service.description %></p>

        <!-- Dropdown Menu to Sort by Brand -->
        <form method="GET" action="">
            <div class="mb-4">
                <label for="brand" class="form-label">Filtre Par Marque:</label>
                <select id="brand" name="brand" class="form-select" onchange="this.form.submit()">
                    <option value="">Toutes Les Marques</option>
                    <% brands.forEach(brand => { %>
                        <option value="<%= brand._id %>" <% if (brand._id.toString() === (query.brand || '')) { %>selected<% } %>><%= brand.name %></option>
                    <% }) %>
                </select>
            </div>
        </form>

        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                  <div class="product-item bg-light border-bottom border-5 border-primary rounded">
                    <div class="position-relative p-4">
                      <!-- Product Image -->
                      <img src="<%= product.image %>" alt="<%= product.name %>" style="width: 100%; height: auto;">
                      <!-- Product Details -->
                      <h3 class="mb-3 text-primary"><%= product.name %></h3>
                      <p>Référence: <%= product.reference %></p>
                      <!-- Truncated Description -->
                      <p><%= truncateText(product.description, 100) %></p>
                      <!-- Link to Product Detail Page -->
                      <a href="/product/<%= product._id %>" class="btn btn-info">Voir Produit</a>
                    </div>
                  </div>
                </div>
              <% }) %>
              

    

               
                
            </div>
        </div>
    </div>
</section>
    <!-- Services End -->


    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <!-- Previous Page Link -->
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?<%= buildPaginationQuery(currentPage - 1) %>" aria-label="Précédent">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
          <% } else { %>
            <li class="page-item disabled">
              <span class="page-link" aria-hidden="true">&laquo;</span>
            </li>
          <% } %>
      
          <!-- Page Numbers -->
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <% if (i === currentPage) { %>active<% } %>">
              <a class="page-link" href="?<%= buildPaginationQuery(i) %>"><%= i %></a>
            </li>
          <% } %>
      
          <!-- Next Page Link -->
          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a class="page-link" href="?<%= buildPaginationQuery(currentPage + 1) %>" aria-label="Suivant">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          <% } else { %>
            <li class="page-item disabled">
              <span class="page-link" aria-hidden="true">&raquo;</span>
            </li>
          <% } %>
        </ul>
      </nav>

    


    

