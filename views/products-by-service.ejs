    <%
  function buildPaginationQuery(page) {
    let queryParams = Object.assign({}, query);
    queryParams.page = page;
    let queryString = Object.keys(queryParams)
      .map(key => encodeURIComponent(key) + '=' + encodeURIComponent(queryParams[key]))
      .join('&');
    return queryString;
  }
%>

