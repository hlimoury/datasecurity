    <div class="container py-5">
        <h1>Products for <%= service.title %></h1>
        <p><%= service.description %></p>

        <!-- Dropdown Menu to Sort by Brand -->
        <form method="GET" action="">
            <div class="mb-4">
                <label for="brand" class="form-label">Filter by Brand:</label>
                <select id="brand" name="brand" class="form-select" onchange="this.form.submit()">
                    <option value="">All Brands</option>
                    <% brands.forEach(brand => { %>
                        <option value="<%= brand._id %>" <% if (brand._id.toString() === (query.brand || '')) { %>selected<% } %>><%= brand.name %></option>
                    <% }) %>
                </select>
            </div>
        </form>

        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                  <div class="product-item bg-light border-bottom border-5 border-primary rounded">
                    <div class="position-relative p-4">
                      <!-- Product Image -->
                      <img src="<%= product.image %>" alt="<%= product.name %>" style="width: 100%; height: auto;">
                      <!-- Product Details -->
                      <h3 class="mb-3 text-primary"><%= product.name %></h3>
                      <p>Reference: <%= product.reference %></p>
                      <!-- Truncated Description -->
                      <p><%= truncateText(product.description, 100) %></p>
                      <!-- Link to Product Detail Page -->
                      <a href="/product/<%= product._id %>" class="btn btn-info">View Product</a>
                    </div>
                  </div>
                </div>
              <% }) %>
          </div>
    </div>
    

    

               
                
